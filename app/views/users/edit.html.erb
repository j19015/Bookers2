
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h1>User info</h1>
        <% if @user.errors.any? %>
          <h2 style="color:red"><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
          <ul style="color:red">
          <% @user.errors.full_messages.each do |message| %>
            <li style="color:red"><%= message %></li>
          <% end %>
          </ul>
        <% end %>
      <%= form_with model: @user,local:true do |f| %>
        <h3>Name</h3>
        <%= f.text_field :name %>
        
        <h3>Image</h3>
        <%= f.attachment_field :profile_image %>
        
        <h3>Introduction</h3>
        <%= f.text_area :introduction %><br/>
        
        <%= f.submit 'Update User' ,class:"btn btn-secondary" %>
        
      <% end %>
    </div>
  </div>

</div>